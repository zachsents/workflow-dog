{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "composite": true,
        // this causes problems
        // "preserveSymlinks": true,
        "allowJs": true,
        "jsx": "preserve",
        "strict": false,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@web/*": [
                "./web/*"
            ],
            "@ui/*": [
                "./web/components/ui/*"
            ],
            "@pkg/*": [
                "./packages/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "integrations",
        "nodes",
        "triggers"
    ],
    "references": [
        {
            "path": "./packages"
        },
        {
            "path": "./web"
        },
        {
            "path": "./workflow-man"
        }
    ]
}